<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="5dp"
    android:background="#009688">

    <TextView
        android:id="@+id/img_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Img_item"
        android:textColor="#E91E63"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_download_img"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:text="下載"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_view_img"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_marginEnd="5dp"
        android:text="預覽"
        app:layout_constraintBottom_toBottomOf="@+id/btn_download_img"
        app:layout_constraintEnd_toStartOf="@+id/btn_download_img"
        app:layout_constraintTop_toTopOf="@+id/btn_download_img" />
</androidx.constraintlayout.widget.ConstraintLayout>