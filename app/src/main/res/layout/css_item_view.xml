<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/css_items"
    android:background="#CDDC39"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/Css_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#E91E63"
        android:text="CSS_item"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_view_css"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:text="內容"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_download_css"
        app:layout_constraintTop_toTopOf="@+id/btn_download_css" />

    <Button
        android:id="@+id/btn_download_css"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:textSize="15dp"
        android:text="下載"
        app:layout_constraintEnd_toStartOf="@+id/Css_ai"
        app:layout_constraintTop_toTopOf="@+id/Css_ai" />

    <Button
        android:id="@+id/Css_ai"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:text="AI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>